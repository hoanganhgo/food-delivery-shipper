<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_bg"
    tools:context=".ui.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/profile"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/avatar"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Van A"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 7826936273"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_ic_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_coin_1"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_balance"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_toEndOf="@id/iv_ic_coin"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100,000"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="10dp">
        <Button
            android:id="@+id/btn_submit_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_money_withdraw"
            android:drawablePadding="5dp"
            android:text="@string/submit_money"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/tv_processing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:elevation="5dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_set_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/max_order"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/white"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/ic_receipt"
                android:drawablePadding="5dp" />
            <TextView
                android:id="@+id/tv_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 orders"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:elevation="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_set_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/max_distance"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/white"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/ic_marker_distance"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 km"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:elevation="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_set_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/max_money"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/white"
                android:textAlignment="textStart"
                android:drawableStart="@drawable/ic_coin_2"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000,000"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:elevation="5dp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp">
        <Button
            android:id="@+id/btn_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/support_center"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_regular"
            android:background="@color/white"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/ic_support"
            android:drawablePadding="5dp"/>
        <Button
            android:id="@+id/btn_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_regular"
            android:background="@color/white"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/ic_bell_blue"
            android:drawablePadding="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp">
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_regular"
            android:background="@color/white"
            android:textAlignment="textStart"
            android:drawableStart="@drawable/ic_logout"
            android:drawablePadding="5dp"/>
    </LinearLayout>
</LinearLayout>